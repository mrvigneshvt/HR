{
  "cli": {
    "version": ">= 3.16.3",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
      "android": {
        "buildType": "app-bundle",
        "autoIncrement": true // ðŸ‘ˆ this auto increments versionCode on every build
      },
      "ios": {
        "autoIncrement": true // ðŸ‘ˆ optional, adds buildNumber automatically
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "track": "production"
      }
    }
  }
}
